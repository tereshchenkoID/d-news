mixin bonus
  .bonus&attributes(attributes)
    .bonus__wrapper.js-bonus-wrapper
      p.bonus__text 234
      .bonus__icon
        i.fa.fa-trophy
    .bonus__dropdown.js-bonus-dropdown
      .bonus__meta
        div
          h4.bonus__title.u-color-primary 234
          p.bonus__description My rewards points
        div
          +button('Activate').button--primary
      a(href="#").bonus__block
        span.bonus__label +10
      a(href="#").bonus__block
        span.bonus__label +20
      a(href="#").bonus__block
        span.bonus__label +30