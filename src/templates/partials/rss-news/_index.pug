mixin rss-news
  .rss-news&attributes(attributes)
    .widget.widget--alt.u-mb-0
      .widget__header
        +widget-title('BREAKING NEWS')
        .swiper-navigation.navigation-rss
          .swiper-button-prev.navigation-rss-prev
          .swiper-button-next.navigation-rss-next
      .widget__body
        .swiper.gallery-rss
          .swiper-wrapper
            - var n = 1;
              while n < 10
                .swiper-slide
                  +rss(n++)
