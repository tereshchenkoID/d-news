---
title: D-news | Sign-Up
lang: en
---
extends layouts/_layout

block content
  +header#header
  .sticky-block
    +nav

  main.main
    section.section
      .container-fluid
        .container
          form.edit-form.edit-form--center
            h1.edit-form__header.u-text-transform-capitalize Create An Account
            .edit-form__body
              .edit-form__block.u-mb-30.edit-form__block--error
                label.edit-form__label First Name
                input(type="text" placeholder="First Name" required).field.edit-form__field
                p.edit-form__error Field is required
              .edit-form__block.u-mb-30
                label.edit-form__label Last Name
                input(type="text" placeholder="Last Name" required).field.edit-form__field
                p.edit-form__error Field is required
              .edit-form__block.u-mb-30
                label.edit-form__label Email
                input(type="email" placeholder="demo@gmail.com" required).field.edit-form__field
                p.edit-form__error Field is required
              .edit-form__block.u-mb-30
                label.edit-form__label Password
                .edit-form__password.js-edit-form-password
                  input(type="password" placeholder="***********" required).field.edit-form__field.js-edit-form-field
                  button(type="button").edit-form__eye.js-edit-form-button
                    i.fa.fa-eye
                p.edit-form__error Field is required
              .edit-form__block.u-mb-30
                label.edit-form__label Confirm Password
                .edit-form__password.js-edit-form-password
                  input(type="password" placeholder="***********" required).field.edit-form__field.js-edit-form-field
                  button(type="button").edit-form__eye.js-edit-form-button
                    i.fa.fa-eye
                p.edit-form__error Field is required
              .edit-form__block.u-mb-30
                +button('Login')(type="submit").button--primary
              .edit-form__block.u-mb-30
                p.edit-form__label Already have an account?
                  a(href="./sign-in.html").u-color-primary.u-ml-5.edit-form__link Login
                p.edit-form__label
                  a(href="./sign-up.html").u-color-primary.edit-form__link Forgot your password?
              .edit-form__block.u-mb-30
                .edit-form__buttons
                  a(href="#").edit-form__social.edit-form__social--facebook.u-mb-20
                    i.fab.fa-facebook-f
                    span login with facebook
                  a(href="#").edit-form__social.edit-form__social--google
                    i.fab.fa-google-plus-g
                    span login with google plus
