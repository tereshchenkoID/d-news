extends layouts/_layout

block content
  +header(true, 5)#header

  main.main
    section.section
      .container-fluid
        .container
          .widget
            .widget__header
              +widget-title('My account', 'logout').widget-title--alt

          .panel.u-mb-30
            h4 Daily quiz
            .quiz-pagination.js-quiz-list-pagination
            .quiz-list.js-quiz-list

          .panel.u-mb-30
            h4.u-mb-16 My bookmarks
            +alert('You are not currently subscribed to a newsletter.').alert--info

          .row.u-mb-30
            - var n = 1;
            while n < 5
              .col.col-sm-6.col-md-4.col-lg-3.col-verticall-offset
                +bookmark.bookmark--absolute
                +post-small(n++, true).post-small--column

          .panel.u-mb-30
            h4.u-mb-16 Discover posts
            p.u-mb-16 Receive exciting comments and analyzes from our SPIEGEL journalists directly to your inbox - from current news to socially relevant topics.
