            .swiper.gallery-online-games.u-mb-16
              .swiper-wrapper
                each game in games
                  .swiper-slide
                    a(href="#").game
                      .game__image
                        img(src=`https://cdn.prod.www.spiegel.de/public/spon/images/games-icons/${game.url}_88.svg` alt=game.title).img
                      .game__title.u-mt-5.u-text-center= game.title
              .swiper-pagination.pagination-online-games
            +button-link('View all games').button--primary.button--sm.button--inline

