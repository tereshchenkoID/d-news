mixin header(show, id)
  header.header&attributes(attributes)
    .container-fluid
      .container
        .header__container
          .header__left
            +breaking-news(1)

          .header__right
            +toggle.js-toggle.header__toggle
            +language.header__language.u-mr-30
            +account
    +nav
    if show
      +header-tabs(id)
    else
      .header__sticky
        +top-news
