---
title: D-news
lang: en
---
extends layouts/_layout

block content
  .top-banner
    .top-banner__block
      +banner('Wide #1')
  +header#header

  main.main
    //notification--active
    +notification.js-notification

    //cookie--active
    +cookie.js-cookie

    //popup--active
    +popup.js-popup

    section.section
      .container-fluid
        .container
          .widget.widget--alt
            .widget__header
              +widget-title('Latest News')
              .swiper-pagination.pagination-latest-news
            .widget__body
              .swiper.gallery-latest-news(data-breakpoints="320:1,480:2,992:5,1200:5").u-mb-30
                .swiper-wrapper
                  - var n = 1;
                  while n < 10
                    .swiper-slide
                      +post-small(n++, true).post-small--column
              .swiper.gallery-latest-news(data-breakpoints="320:1,480:2,992:3,1200:4")
                .swiper-wrapper
                  - var n = 1;
                  while n < 10
                    .swiper-slide
                      +post-small(n++, true).post-small--column

          .widget
            .widget__body
              .swiper.gallery-wide
                .swiper-navigation
                  .swiper-button-prev
                  .swiper-button-next
                .swiper-wrapper
                  - var n = 1;
                  while n < 10
                    .swiper-slide
                      img(src=`https://chtstudio.com/demo/news/images/post/${n++}.jpg`).img.img--cover

          .widget
            .widget__body
              +war-banner

          .grid.grid--sm.u-mb-24
            .grid__column
              +announcents.u-mb-24
              .row
                .col.u-pb-12
                  +post-medium(2, true).post-medium--row
                - var n = 1;
                while n < 6
                  .col.col-lg-6.col-verticall-offset
                    +post-small(n++, false).post-small--row
                .col.col-lg-6.col-verticall-offset
                  +banner('Banner #4')(style="max-height: 87px")

            .grid__column.u-visible-lg
              +banner('Banner #3')(style="max-height: 550px").u-mb-24
              +rss-news

          .widget
            .widget__body
              +banner('Banner #1')(style="max-height: 120px")

          .grid.grid--lg
            .grid__column
              .widget.widget--alt
                .widget__header
                  +widget-title('Latest News')
                  .swiper-pagination.pagination-latest-news
                .widget__body
                  .swiper.gallery-latest-news(data-breakpoints="320:1,480:2,992:3,1200:3")
                    .swiper-wrapper
                      - var n = 1;
                      while n < 10
                        .swiper-slide
                          +post-small(n++, true).post-small--column

              .widget
                .widget__header
                  +widget-title('WORLDS')
                .widget__body
                  .row
                    .col.col-lg-6
                      +post-medium(1, true).post-medium--column.wide
                    .col.col-lg-6
                      .row
                        - var n = 1;
                        while n < 4
                          .col.col-verticall-offset
                            +post-small(n++, false).post-small--row
                        .col.col-verticall-offset
                          +banner('banner #6')(style="max-height: 87px")

              .widget
                .widget__body
                  +banner('banner #7')(style="max-height: 120px")

              .widget
                .widget__header
                  +widget-title('Archive')
                .widget__body
                  .swiper.gallery-archive
                    .swiper-navigation
                      .swiper-button-prev
                      .swiper-button-next
                      .swiper-title Must be a date 0
                      .date
                        input(type="date").date__input
                    .swiper-wrapper
                      - var s = 1;
                      while s < 4
                        .swiper-slide(data-title=`Must be a date ${s}` data-id=`${s++}`)
                          .row
                            - var n = 1;
                            while n < 4
                              .col.col-verticall-offset
                                +post-medium(n++, true).post-medium--row

              .widget
                .widget__header
                  +widget-title('BUSINESS')
                .widget__body
                  .row
                    - var n = 1;
                    while n < 4
                      .col.col-verticall-offset
                        +post-medium(n++, true).post-medium--row

              .row.u-mb-24
                .col
                  +banner('banner #7')(style="max-height: 70px")

              .widget.widget--alt
                .widget__header
                  +widget-title('photo gallery')
                  .swiper-pagination.pagination-photo-gallery
                .widget__body
                  .row
                    .col
                      .swiper.gallery-photo
                        .swiper-wrapper
                          - var n = 1;
                          while n < 10
                            .swiper-slide
                              a(href="#").thumbnail
                                img(src=`https://chtstudio.com/demo/news/images/post/${n++}.jpg` loading="lazy").img.img--cover
                              a(href="#").content= `Slide number ${n}`
                      .swiper.gallery-thumb-photo
                        .swiper-wrapper
                          - var n = 1;
                          while n < 10
                            .swiper-slide
                              img(src=`https://chtstudio.com/demo/news/images/post/${n++}.jpg` loading="lazy").img.img--cover

              .widget
                .widget__header
                  +widget-title('TECHNOLOGY')
                .widget__body
                  .row
                    .col.col-lg-9
                      .row
                        .col.col-verticall-offset
                          +post-medium(2, true).post-medium--column.wide
                    .col.col-lg-3
                      - var n = 1;
                        .row
                          while n < 3
                            .col.col-verticall-offset
                              +post-small(n++, false).post-small--column

              .widget
                .widget__header
                  +widget-title('LIFE STYLE')
                .widget__body
                  .row
                    .col.col-lg-4.col-verticall-offset
                      +post-medium(2, false, true).post-medium--column.wide
                    .col.col-lg-4.col-verticall-offset
                      +post-medium(3, false).post-medium--column.wide
                    .col.col-lg-4.col-verticall-offset
                      +post-medium(4, false, true).post-medium--column.wide
                    - var n = 1;
                      while n < 3
                        .col.col-lg-6.col-verticall-offset
                          +post-medium(n++, false).post-medium--column.wide
                    - var n = 1;
                      while n < 4
                        .col.col-lg-4.col-verticall-offset
                          +post-medium(n++, false).post-medium--column.wide

              .widget
                .widget__body
                  .row
                    .col.col-md-8.u-mb-24.u-mb-0-md
                      .swiper.gallery-default
                        .swiper-navigation
                          .swiper-button-prev
                          .swiper-button-next
                        .swiper-wrapper
                          - var n = 4;
                          while n < 11
                            .swiper-slide
                              +post-full(n++, true).post-full--wide
                    .col.col-md-4
                      +post-full(5, true).post-full--small.u-mb-24
                      +post-full(3, true).post-full--small

              .widget
                .widget__body
                  +pagination

            .grid__column.sa-sticky
              .widget
                .widget__header
                  +widget-title('Follow us')
                .widget__body
                  +follow

              .widget
                .widget__header
                  +widget-title('Weather')
                .widget__body
                  .weather
                    //https://weatherwidget.org/
                    #ww_2da15754bd949(v='1.3' loc='auto' a='{"t":"horizontal","lang":"en","sl_lpl":1,"ids":[],"font":"Arial","sl_ics":"one_a","sl_sot":"celsius","cl_bkg":"#FFFFFF00","cl_font":"#000000","cl_cloud":"#d4d4d4","cl_persp":"#2196F3","cl_sun":"#FFC107","cl_moon":"#FFC107","cl_thund":"#FF5722"}')
                      a#ww_2da15754bd949_u(href='https://oneweather.org/archive/' target='_blank') Weather Archive
                    script(async='' src='https://app1.weatherwidget.org/js/?id=ww_2da15754bd949')

              .widget
                .widget__body
                  +banner('banner #5')(style="max-height: 216px")

              .widget
                .widget__header
                  +widget-title('Popular Post')
                .widget__body
                  - var n = 1;
                    .row
                      while n < 5
                        .col.col-verticall-offset
                          +post-small(n++, false).post-small--row

              .widget
                .widget__body
                  +banner('banner #5')(style="max-height: 216px")


              .widget
                .widget__header
                  +widget-title('Recent Posts')
                .widget__body
                  - var n = 1;
                    .row
                      while n < 5
                        .col.col-xl-6.col-verticall-offset
                          +post-small(n++, true).post-small--column

              .widget
                .widget__body
                  +banner('banner #6')(style="max-height: 87px")

              .widget
                .widget__header
                  +widget-title('WEEKLY TOPLIST')
                .widget__body
                  +top-list
