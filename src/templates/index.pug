---
title: D-news
lang: en
---
extends layouts/_layout

block content
  main.main
    section.section
      .container-fluid
        .container
          .row
            .col.col-md-7.col-lg-8
              .widget.widget--alt
                .widget__header
                  +widget-title('Latest News')
                  .swiper-pagination.pagination-latest-news
                .widget__body
                  .swiper.gallery-latest-news
                    .swiper-wrapper
                      - var n = 1;
                      while n < 10
                        .swiper-slide
                          +post-small(n++, true).post-small--column

              .widget
                .widget__header
                  +widget-title('WORLDS')
                .widget__body
                  .row
                    .col.col-lg-6
                      .row
                        .col.col-verticall-offset
                          +post-medium(true).post-medium--column
                    .col.col-lg-6
                      - var n = 1;
                        .row
                          while n < 5
                            .col.col-verticall-offset
                              +post-small(n++, false).post-small--row

              .widget
                .widget__header
                  +widget-title('TECHNOLOGY')
                .widget__body
                  .row
                    .col.col-lg-9
                      .row
                        .col.col-verticall-offset
                          +post-medium(true).post-medium--column
                    .col.col-lg-3
                      - var n = 1;
                        .row
                          while n < 3
                            .col.col-verticall-offset
                              +post-small(n++, false).post-small--column

              .widget.widget--alt
                .widget__header
                  +widget-title('photo gallery')
                  .swiper-pagination.pagination-photo-gallery
                .widget__body
                  .row
                    .col
                      .swiper.gallery-photo
                        .swiper-wrapper
                          - var n = 1;
                          while n < 10
                            a(href="#").swiper-slide
                              img(src=`https://chtstudio.com/demo/news/images/post/${n++}.jpg` loading="lazy").img.img--cover
                      .swiper.gallery-thumb-photo
                        .swiper-wrapper
                          - var n = 1;
                          while n < 10
                            .swiper-slide
                              img(src=`https://chtstudio.com/demo/news/images/post/${n++}.jpg` loading="lazy").img.img--cover

              .widget
                .widget__header
                  +widget-title('HEALTH')
                .widget__body
                  .row
                    .col.col-verticall-offset
                      +post-medium(true).post-medium--row
                    - var n = 1;
                      while n < 7
                        .col.col-lg-6.col-verticall-offset
                          +post-small(n++, false).post-small--row

              .widget
                .widget__header
                  +widget-title('LIFE STYLE')
                .widget__body
                  .row
                    - var n = 1;
                      while n < 3
                        .col.col-lg-6.col-verticall-offset
                          +post-medium(false)(data-count=n++).post-medium--column
                    - var n = 1;
                      while n < 4
                        .col.col-lg-4.col-verticall-offset
                          +post-medium(false)(data-count=n++).post-medium--column

              .widget
                .widget__header
                  +widget-title('BUSINESS')
                .widget__body
                  .row
                    - var n = 1;
                      while n < 5
                        .col.col-verticall-offset
                          +post-medium(true)(data-count=n++).post-medium--row
                    .col.col-verticall-offset
                      +pagination

            .col.col-md-5.col-lg-4
              .widget.widget--alt
                .widget__header
                  +widget-title('BREAKING NEWS')
                  .swiper-navigation.navigation-rss
                    .swiper-button-prev.navigation-rss-prev
                    .swiper-button-next.navigation-rss-next
                .widget__body
                  +rss-news

              .widget
                .widget__header
                  +widget-title('Popular Post')
                .widget__body
                  - var n = 1;
                    .row
                      while n < 5
                        .col.col-verticall-offset
                          +post-small(n++, false).post-small--row

              .widget
                .widget__body
                  +banner(10)

              .widget
                .widget__header
                  +widget-title('Follow us')
                .widget__body
                  +follow

              .widget
                .widget__header
                  +widget-title('Recent Posts')
                .widget__body
                  - var n = 1;
                    .row
                      while n < 5
                        .col.col-lg-6.col-verticall-offset
                          +post-small(n++, true).post-small--column

              .widget
                .widget__body
                  +banner(9)

              +widget-title('Weather')
              +widget-title('Weekly toplist')
