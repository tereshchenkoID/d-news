---
title: D-news
lang: en
---
extends layouts/_layout

block content
  main.main
    section.section
      .container-fluid
        .container
          .row.u-mb-35
            .col.col-lg-9
              .row
                .col.col-md-8
                  .swiper.gallery-default
                    .swiper-wrapper
                      - var n = 1;
                      while n < 10
                        .swiper-slide
                          +post-full(n++, true)
                .col.col-md-4
                  +post-full(5, true).post-full--small
                  +post-full(3, true).post-full--small
            .col.col-lg-3
              +rss-news

          .row
            .col.col-md-7.col-lg-8
              .widget.widget--alt
                .widget__header
                  +widget-title('Latest News')
                  .swiper-pagination.pagination-latest-news
                .widget__body
                  .swiper.gallery-latest-news
                    .swiper-wrapper
                      - var n = 1;
                      while n < 10
                        .swiper-slide
                          +post-small(n++, true).post-small--column

              .widget
                .widget__header
                  +widget-title('WORLDS')
                .widget__body
                  .row
                    .col.col-lg-6
                      .row
                        .col.col-verticall-offset
                          +post-medium(true).post-medium--column
                    .col.col-lg-6
                      - var n = 1;
                        .row
                          while n < 5
                            .col.col-verticall-offset
                              +post-small(n++, false).post-small--row

              .widget
                .widget__header
                  +widget-title('TECHNOLOGY')
                .widget__body
                  .row
                    .col.col-lg-9
                      .row
                        .col.col-verticall-offset
                          +post-medium(true).post-medium--column
                    .col.col-lg-3
                      - var n = 1;
                        .row
                          while n < 3
                            .col.col-verticall-offset
                              +post-small(n++, false).post-small--column

              .widget.widget--alt
                .widget__header
                  +widget-title('photo gallery')
                  .swiper-pagination.pagination-photo-gallery
                .widget__body
                  .row
                    .col
                      .swiper.gallery-photo
                        .swiper-wrapper
                          - var n = 1;
                          while n < 10
                            a(href="#").swiper-slide
                              img(src=`https://chtstudio.com/demo/news/images/post/${n++}.jpg` loading="lazy").img.img--cover
                      .swiper.gallery-thumb-photo
                        .swiper-wrapper
                          - var n = 1;
                          while n < 10
                            .swiper-slide
                              img(src=`https://chtstudio.com/demo/news/images/post/${n++}.jpg` loading="lazy").img.img--cover

              .widget
                .widget__header
                  +widget-title('HEALTH')
                .widget__body
                  .row
                    .col.col-verticall-offset
                      +post-medium(true).post-medium--row
                    - var n = 1;
                      while n < 7
                        .col.col-lg-6.col-verticall-offset
                          +post-small(n++, false).post-small--row

              .widget
                .widget__header
                  +widget-title('LIFE STYLE')
                .widget__body
                  .row
                    - var n = 1;
                      while n < 3
                        .col.col-lg-6.col-verticall-offset
                          +post-medium(false)(data-count=n++).post-medium--column
                    - var n = 1;
                      while n < 4
                        .col.col-lg-4.col-verticall-offset
                          +post-medium(false)(data-count=n++).post-medium--column

              .widget
                .widget__header
                  +widget-title('BUSINESS')
                .widget__body
                  .row
                    - var n = 1;
                      while n < 5
                        .col.col-verticall-offset
                          +post-medium(true)(data-count=n++).post-medium--row
                    .col.col-verticall-offset
                      +pagination

            .col.col-md-5.col-lg-4
              .widget
                .widget__header
                  +widget-title('Popular Post')
                .widget__body
                  - var n = 1;
                    .row
                      while n < 5
                        .col.col-verticall-offset
                          +post-small(n++, false).post-small--row

              .widget
                .widget__body
                  +banner(10)

              .widget
                .widget__header
                  +widget-title('Follow us')
                .widget__body
                  +follow

              .widget
                .widget__header
                  +widget-title('Recent Posts')
                .widget__body
                  - var n = 1;
                    .row
                      while n < 5
                        .col.col-lg-6.col-verticall-offset
                          +post-small(n++, true).post-small--column

              .widget
                .widget__body
                  +banner(9)

              .widget
                .widget__header
                  +widget-title('Weather')
                .widget__body
                  .weather
                    //https://weatherwidget.org/
                    #ww_2da15754bd949(v='1.3' loc='auto' a='{"t":"horizontal","lang":"en","sl_lpl":1,"ids":[],"font":"Arial","sl_ics":"one_a","sl_sot":"celsius","cl_bkg":"#FFFFFF00","cl_font":"#000000","cl_cloud":"#d4d4d4","cl_persp":"#2196F3","cl_sun":"#FFC107","cl_moon":"#FFC107","cl_thund":"#FF5722"}')
                      a#ww_2da15754bd949_u(href='https://oneweather.org/archive/' target='_blank') Weather Archive
                    script(async='' src='https://app1.weatherwidget.org/js/?id=ww_2da15754bd949')

              .widget
                .widget__header
                  +widget-title('WEEKLY TOPLIST')
                .widget__body
                  +top-list
