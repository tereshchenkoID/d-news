  main.main
    section.section
    .container-fluid
      .container
        .row
          .col.col-md-7.col-lg-8
            .widget
              +widget-title('photo gallery')
              .row
                .col
                  .swiper.mySwiper2(style='--swiper-navigation-color: #fff; --swiper-pagination-color: #fff')
                    .swiper-wrapper
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-1.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-2.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-3.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-4.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-5.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-6.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-7.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-8.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-9.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-10.jpg').img.img--cover
                    .swiper-button-next
                    .swiper-button-prev

                  .swiper.mySwiper
                    .swiper-wrapper
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-1.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-2.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-3.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-4.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-5.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-6.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-7.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-8.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-9.jpg').img.img--cover
                      .swiper-slide
                        img(src='https://swiperjs.com/demos/images/nature-10.jpg').img.img--cover




            .widget
              +widget-title('Latest News')
              - var n = 1;
                .row
                  while n < 10
                    .col.col-md-6.col-lg-4.col-verticall-offset
                      +post-small(n++, true).post-small--column

            .widget
              +widget-title('WORLDS')
              .row
                .col.col-lg-6
                  .row
                    .col.col-verticall-offset
                      +post-medium(true).post-medium--column
                .col.col-lg-6
                  - var n = 1;
                    .row
                      while n < 5
                        .col.col-verticall-offset
                          +post-small(n++, false).post-small--row

            .widget
              +widget-title('TECHNOLOGY')
              .row
                .col.col-lg-9
                  .row
                    .col.col-verticall-offset
                      +post-medium(true).post-medium--column
                .col.col-lg-3
                  - var n = 1;
                    .row
                      while n < 3
                        .col.col-verticall-offset
                          +post-small(n++, false).post-small--column

            .widget
              +widget-title('HEALTH')
              .row
                .col.col-verticall-offset
                  +post-medium(true).post-medium--row
                - var n = 1;
                  while n < 7
                    .col.col-lg-6.col-verticall-offset
                      +post-small(n++, false).post-small--row

            .widget
              +widget-title('LIFE STYLE')
              .row
                - var n = 1;
                  while n < 3
                    .col.col-lg-6.col-verticall-offset
                      +post-medium(false)(data-count=n++).post-medium--column
                - var n = 1;
                  while n < 4
                    .col.col-lg-4.col-verticall-offset
                      +post-medium(false)(data-count=n++).post-medium--column

            .widget
              +widget-title('BUSINESS')
              .row
                - var n = 1;
                  while n < 5
                    .col.col-verticall-offset
                      +post-medium(true)(data-count=n++).post-medium--row

          .col.col-md-5.col-lg-4
            .widget
              +widget-title('Popular Post')
              - var n = 1;
                .row
                  while n < 5
                    .col.col-verticall-offset
                      +post-small(n++, false).post-small--row

            .widget
              +widget-title('Follow us')
              +follow

            .widget
              +widget-title('Recent Posts')
              - var n = 1;
                .row
                  while n < 5
                    .col.col-lg-6.col-verticall-offset
                      +post-small(n++, true).post-small--column

            +widget-title('Weather')
            +widget-title('Weekly toplist')
